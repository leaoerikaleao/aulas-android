<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.erika.provapdm.activity.MainActivity">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Cadastro de Produtos"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edNome"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:ems="10"
            android:hint="Nome do Produto" />

        <EditText
            android:id="@+id/edDescricao"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:ems="10"
            android:hint="Descrição do Produto"
            android:inputType="textMultiLine" />

        <Spinner
            android:id="@+id/spUnidade"
            android:layout_width="293dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="171dp" />

        <RadioGroup
            android:id="@+id/rgPerecivel"
            android:layout_width="295dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="147dp">

            <RadioButton
                android:id="@+id/edPerecivel"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/edNome"
                android:layout_alignTop="@+id/edNaoPerecivel"
                android:text="Perecivel" />

            <RadioButton
                android:id="@+id/edNaoPerecivel"
                android:layout_width="165dp"
                android:layout_height="21dp"
                android:layout_alignEnd="@+id/edNome"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="200dp"
                android:text="Não Perecivel" />

        </RadioGroup>


        <Switch
            android:id="@+id/swPromocao"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Promoção" />

        <CheckBox
            android:id="@+id/cbLimiteEstoque"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="67dp"
            android:text="Limite de Estoque" />

        <CheckBox
            android:id="@+id/cbAmbienteRef"
            android:layout_width="297dp"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="106dp"
            android:text="Ambiente Refrigerado" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:text="@string/btCadastrar" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>