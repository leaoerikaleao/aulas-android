<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/produtoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produto:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/produtoDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/produtoUnidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unidade:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/produtoPerecivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perecivel:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/produtoRefrigerado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refrigerado:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/limiteEstoque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estoque:"
            android:textSize="20dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>